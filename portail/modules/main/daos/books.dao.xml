        <property name="title_short" fieldname="title_short" datatype="string" required="true" maxlength="255"/>
        <property name="edition" fieldname="edition" datatype="string" required="true" maxlength="255"/>
        <property name="authors" fieldname="authors" datatype="text" required="true"/>
        <property name="copyright_years" fieldname="copyright_years" datatype="string" required="true" maxlength="255"/>
        <property name="copyright_holders" fieldname="copyright_holders" datatype="text" required="true"/>
        <property name="hierarchy" fieldname="hierarchy" datatype="text" default=""/>
        <property name="legalnotice" fieldname="legalnotice" datatype="text" default=""/>
        <property name="legalnoticehtml" fieldname="legalnoticehtml" datatype="text" default=""/>
        <property name="pagelegalnoticehtml" fieldname="pagelegalnoticehtml" datatype="text" default=""/>


